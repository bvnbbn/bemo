<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/img_cont2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/photoImageView_send"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src = "@drawable/ic_account_circle_black_36dp"
            android:background="@drawable/chatview_right"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:id="@+id/image_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey"
            android:textColor="@color/send_message_color"
            android:background="@drawable/chatview_right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="16dp">
        </TextView>


       <!-- <ImageView
            android:id="@+id/play_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:src="@android:drawable/ic_media_play" />-->
    </LinearLayout>




   <TextView
        android:id="@+id/txt_sendchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatview_right"
        android:text="Hi"
        android:textColor="@color/send_message_color"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"
      />

    <TextView
        android:id="@+id/YES_sendchat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/chatview_right"
        android:text="YES"
        android:layout_centerHorizontal="false"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:letterSpacing="0.03"
        android:visibility="gone"
        android:backgroundTint="#495ae2"
        android:textSize="18sp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"/>
    <TextView
        android:id="@+id/NO_sendchat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/chatview_right"
        android:text="YES"
        android:layout_centerHorizontal="false"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:letterSpacing="0.03"
        android:visibility="gone"
        android:backgroundTint="@color/gray"
        android:textSize="18sp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"/>

</RelativeLayout>