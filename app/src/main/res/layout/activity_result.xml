<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/Theme.DesignBemo"
    android:background="@color/white"
    tools:context="com.tech.sungkim.bemo.ResultActivity">


    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="0"
        android:textColor="#0586e1"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/textView14"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="287dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:text="Continue conversation with a therapist for emotional support anytime, anonymously"

        app:layout_constraintTop_toBottomOf="@+id/textView14"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/facebook_sign_in"
        android:layout_width="200dp"
        android:layout_height="40dp"

        android:background="@drawable/fb_button"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="8dp"
        facebook:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        facebook:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        facebook:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:text="Your anxiety score is"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/that_elephant"
        android:layout_marginLeft="91dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login or Sign up"
        android:textColor="@color/light_navy"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/term_conditions_intro"
        style="@style/Robotolight"
        android:textSize="14sp"
        android:textColor="@color/black"

        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_button" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/google_button"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
