<resources>

    <style name="Theme.DesignBemo" parent="AppTheme" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarTabTextStyle">@style/style_action</item>
    </style>

    <style name="NoActionBarBemo" parent="AppTheme.NoActionBar">
        <item name="android:colorPrimaryDark">@color/light_navy</item>
    </style>


    <style name="Theme.SpecificDesignBemo" parent="AppThemeSpecific" />

    <style name="AppThemeSpecific" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_light</item>
        <item name="colorPrimaryDark">@color/bemo</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/gray_light</item>  <!-- ???? -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="navigation_item_menu">
        <item name="android:textColorSecondary">@color/green_dark</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:listDivider">@color/red_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.NavigationView_">
        <item name="android:textColorSecondary">@color/gray_dark</item>
    </style>


    <style name="AppTheme.TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.TextStyle</item>
        <item name="tabTextColor">@color/gray_dark</item>
        <item name="tabSelectedTextColor">@color/gray_dark_2</item>
        <item name="tabIndicatorColor">@color/gray_light</item>
        <!--<item name="tabIndicatorHeight">3dp</item>-->
        <!--<item name="android:background">?attr/colorPrimary</item>-->
    </style>

    <style name="AppTheme.TextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="datePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/line_perfil</item>
        <item name="colorPrimaryDark">@color/line_perfil</item>
        <item name="colorAccent">@color/line_perfil</item>
        <item name="android:textColorPrimary">@color/line_perfil</item>
        <item name="android:textColorSecondary">@color/line_perfil</item>
        <item name="android:textColorTertiary">@color/line_perfil</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/bemo_light</item>
        <item name="colorControlActivated">@color/bemo_light</item>
    </style>


    <style name="EditTextCustom" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/bemo_light</item>
        <item name="colorAccent">@color/bemo_light</item>
    </style>


    <style name="EditTextCustomEditar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/bemo_light</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>


    <style name="styleTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/bemo_light</item>
    </style>

    <style name="styleInputLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/bemo_light</item>
        <item name="colorControlActivated">@color/bemo_dark</item>
    </style>


    <style name="ratingMiddle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_custom</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:maxHeight">46dp</item>
    </style>


    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/gray_dark_2</item>
        <item name="android:textSize">14sp</item>
    </style>

